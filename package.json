{
  "name": "base",
  "version": "1.0.0",
  "description": "base application template",
  "author": "scorocode",
  "license": "ISC",
  "main": "index.ts",
  "scripts": {
    "build:prod": "npm-run-all clean lint webpack:run afterbuild --print-label",
    "start": "npm-run-all clean lint build:dev --parallel watch:lint watch:build watch:server",
    "test": "npm-run-all --parallel watch:lint watch:test",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "clean": "rimraf project",
    "build:dev": "$(npm bin)/tsc",
    "afterbuild": "$(npm bin)/ncp public project/public",
    "webpack:run": "$(npm bin)/webpack",
    "watch:lint": "onchange 'src/**/*.ts' -- npm run lint",
    "watch:test": "mocha  --require ts-node/register --watch-extensions ts --watch --recursive 'src/**/*_test.ts'",
    "watch:build": "npm run build:dev --watch",
    "watch:server": "node 'project/index.js' --watch 'project' -- port=3000"
  },
  "devDependencies": {
    "@types/chai-http": "^3.0.5",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.0.29",
    "assert": "^1.4.1",
    "chai-as-promised": "^7.1.1",
    "chai-datetime": "^1.5.0",
    "chai-http": "^4.2.0",
    "chai-things": "^0.2.0",
    "mocha": "^5.0.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.1.3",
    "rimraf": "^2.6.2",
    "ts-loader": "^5.3.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "2.5.2",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@types/node": "^10.12.0",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "express": "^4.16.3"
  }
}
