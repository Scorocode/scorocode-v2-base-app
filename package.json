{
  "name": "base",
  "version": "1.0.0",
  "description": "base application template",
  "author": "scorocode",
  "license": "ISC",
  "main": "index.ts",
  "scripts": {
    "build:prod": "npm-run-all clean lint webpack:run afterbuild --print-label",
    "start": "npm-run-all clean lint build:dev --parallel watch:lint watch:build watch:server",
    "test": "npm-run-all --parallel watch:lint watch:test",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "clean": "rimraf project",
    "build:dev": "$(npm bin)/tsc",
    "afterbuild": "$(npm bin)/ncp templates project/templates && $(npm bin)/ncp public project/public",
    "webpack:run": "$(npm bin)/webpack",
    "watch:lint": "onchange 'src/**/*.ts' -- clear && npm run lint",
    "watch:test": "mocha  --require ts-node/register --watch-extensions ts --watch --recursive 'src/**/*_test.ts'",
    "watch:build": "npm run build:dev --watch",
    "watch:server": "node 'project/index.js' --watch 'project' -- port=3000",
    "// create a new migration config (ormconfig.json)": "",
    "// example: use once": "",
    "// https://github.com/typeorm/typeorm/blob/master/docs/using-cli.md#initialize-a-new-typeorm-project": "",
    "migration-init": "ts-node $(npm bin)/typeorm init --database postgres",
    "// create a new migration rule for entity": "",
    "// example: ENTITY=<name> npm run migration-create": "",
    "// https://github.com/typeorm/typeorm/blob/master/docs/using-cli.md#create-a-new-migration": "",
    "migration-create": "ENTITY= ts-node $(npm bin)/typeorm migration:create -n $ENTITY -d src/models/migration",
    "// run migrations": "",
    "// https://github.com/typeorm/typeorm/blob/master/docs/using-cli.md#run-migrations": "",
    "migration-run": "ts-node $(npm bin)/typeorm migration:run"
  },
  "devDependencies": {
    "@types/chai-http": "^3.0.5",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "assert": "^1.4.1",
    "chai-as-promised": "^7.1.1",
    "chai-datetime": "^1.5.0",
    "chai-http": "^4.2.1",
    "chai-things": "^0.2.0",
    "mocha": "^5.0.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "rimraf": "^2.6.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "2.5.2",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "express": "^4.16.3",
    "pg": "^7.3.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.8"
  }
}
